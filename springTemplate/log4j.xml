<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//APACHE//DTD LOG4J 1.2//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- Appenders -->
	<!-- 콘솔 -->
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH시mm분ss초}] %-5p  : %c - %m%n" />
		</layout>
	</appender>
	
	<!-- 파일 -->
	<appender name="fileAppender" class="org.apache.log4j.FileAppender">
		<param name="file" value="D://dev//log//khLogFile.log" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH시mm분ss초}] %-5p  : %c - %m%n" />
		</layout>
	</appender>
	
	<!-- dalily 파일 -->
	<appender name="dalilyFileAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="D://dev//log//khLogFile.txt" />
		<param name="append" value="true" />
		<param name="DatePattern" value="yyyy-MM-dd HH시mm분" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH시mm분ss초}] %-5p  : %c - %m%n" />
		</layout>
	</appender>
	
	<!-- xml파일 -->
	<appender name="xmlFileAppender" class="org.apache.log4j.FileAppender">
		<param name="file" value="D://dev//log//khLogFile.xml" />
		<param name="append" value="true" />
		<layout class="org.apache.log4j.xml.XMLLayout">
			<param name="ConversionPattern" value="[%d{yyyy-MM-dd HH시mm분ss초}] %-5p  : %c - %m%n" />
		</layout>
	</appender>

	<!-- Root Logger -->
	<root>
		<priority value="trace" />
		<appender-ref ref="console" />
		<appender-ref ref="dalilyFileAppender" />
	</root>
	
</log4j:configuration>
